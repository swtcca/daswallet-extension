{
  "name": "DasWallet",
  "description": "Das Wallet",
  "version": null,
  "manifest_version": 2,
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "DasWallet",
    "default_popup": "pages/popup.html",
